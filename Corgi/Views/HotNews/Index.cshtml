@model IEnumerable<HotArticles>


@using Corgi.Models;

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <input class="input-group" type="text" id="needle" />
    <button id="searchButton" onclick="searchNews();"><i class="glyphicon glyphicon-search"></i> </button>
</div>
<div id="results">
    @foreach (var story in Model)
    {
        <div class="newsWrap">
            <div class="hotNews">
                <h2>
                    @story.StoryName
                </h2>
            </div>
            <div class="hotNewsUrl">
                <h3>
                    @story.Url
                </h3>
            </div>
        </div>
    }
</div>